datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  books     Book[]    @relation("UserBooks")
  borrows   Borrow[]
}

model Author {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  books     Book[]
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  books     Book[]
}

model Book {
  id         Int       @id @default(autoincrement())
  title      String
  authorId   Int
  categoryId Int
  qty        Int       @default(0) @min(0)
  author     Author    @relation(fields: [authorId], references: [id], onDelete: Cascade)
  category   Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  userId     Int?
  user       User?     @relation(fields: [userId], references: [id], onDelete: SetNull, name: "UserBooks")
  borrows    Borrow[]
}

model Borrow {
  id         Int       @id @default(autoincrement())
  userId     Int
  bookId     Int
  borrowDate DateTime
  returnDate DateTime?
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  book       Book      @relation(fields: [bookId], references: [id], onDelete: Cascade)
}
